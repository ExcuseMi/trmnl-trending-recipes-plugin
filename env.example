# ============================================================================
# IP WHITELIST CONFIGURATION
# ============================================================================

# Enable TRMNL IP whitelist protection (true/false)
ENABLE_IP_WHITELIST=true

# How often to refresh TRMNL IPs (hours)
IP_REFRESH_HOURS=24

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Path to SQLite database (inside container, /data is mounted as volume)
DATABASE_PATH=/data/recipes.db

# ============================================================================
# FETCH CONFIGURATION
# ============================================================================

# How often to fetch recipes from TRMNL API (hours)
FETCH_INTERVAL_HOURS=24

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Port to run the Flask server on
PORT=5000

# Number of Gunicorn worker processes (default: 2)
# Recommended: 2-4 workers for typical workloads
GUNICORN_WORKERS=2
